<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.happyhouse.dao.NoticeDao">
	<select id="listArticle"	parameterType="pageBean"		resultType="noticeDto">
		select 	*
		from 	notice
		<if test = "key != null and word != null">
			where 	${key} like CONCAT('%', #{word}, '%')
		</if>
		order 	by	articleno	desc
		limit	#{startNo},	#{interval}
	</select>

	<select id="totalCount"		parameterType="map"		resultType="int">
		select 	count(*)
		from 	notice
		<if test = "key != null and word != null">
			where 	${key} like CONCAT('%', #{word}, '%')
		</if>
	</select>

	<select id="getArticle"		parameterType="int"		resultType="noticeDto">
		select 	*
		from 	notice
		where 	articleno = #{articleNo}
	</select>

	<update id="hitArticle"		parameterType="int"		>
		update	notice
		set		hits = hits + 1
		where	articleno = #{articleNo}
	</update>

	<insert id="writeArticle"	parameterType="noticeDto">
		insert	
		into	notice
		values	(	null
					,#{userId}
					,#{subject}
					,#{content}
					,now()
					,0)
	</insert>

	<delete id="removeArticle"	parameterType="int">
		delete
		from	notice
		where	articleno = #{articleNo}
	</delete>

	<update id="updateArticle"	parameterType="noticeDto">
		update 	notice
		set		subject = #{subject}
				, content = #{content}
		where	articleno = #{articleNo}
	</update>

	<insert id="writeReply"	parameterType="replyDto">
		insert	
		into	reply
		values	(	null
					,#{userId}
					,#{articleNo}
					,#{content})
	</insert>

	<select id="listReply"		parameterType="int"		resultType="replyDto">
		select 	*
		from 	reply
		where 	articleno = #{articleNo}
		order 	by	id
	</select>

	<delete id="removeReply"	parameterType="int">
		delete
		from	reply
		where	id = #{id}
	</delete>

</mapper>