<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.happyhouse.dao.NoticeDao">
	<select id="listArticle"	parameterType="map"		resultType="noticeDto">
		select 	*
		from 	notice
		<if test = "key != null and word != null">
			where 	${key} like CONCAT('%', #{word}, '%')
		</if>
		order 	by	articleno	desc;
	</select>

	<select id="getArticle"		parameterType="int"		resultType="noticeDto">
		select 	*
		from 	notice
		where 	articleno = #{articleNo}
	</select>

	<update id="hitArticle"		parameterType="int"		>
		update	notice
		set		hits = hits + 1
		where	articleno = #{articleNo}
	</update>

	<insert id="writeArticle"	parameterType="noticeDto">
		insert	
		into	notice
		values	(	null
					,#{userId}
					,#{subject}
					,#{content}
					,now()
					,0)
	</insert>

	<delete id="removeArticle"	parameterType="articleNo">
		delete
		from	notice
		where	articleno = #{articleNo}
	</delete>

</mapper>